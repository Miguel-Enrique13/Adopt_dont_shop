<h2>All Pets</h2>

<div class="card-columns">
  <% @pets.each do |pet| %>
      <div class="card">
        <%= image_tag asset_path(pet.image), class: "card-img-top" %>
        <div class="card-body">
          <h3 class="card-title"><%= link_to pet.name, "/pets/#{pet.id}" %></h3>
          <ul class="list-group">
              <li class="list-group-item"><%= pet.age %> years old</li>
              <li class="list-group-item"><%= pet.sex %></li>
          </ul>
          <div class="button">
            <%= link_to "#{pet.shelter.name}", "/shelters/#{pet.shelter.id}" , class: "btn btn-outline-secondary"%>
            <%= link_to 'Update', "/pets/#{pet.id}/edit", class: "btn btn-outline-primary", id: "#{pet.id}" %>
            <%= link_to 'Delete', "/pets/#{pet.id}", method: :delete, class: "btn btn-outline-danger" %>
          </div>
        </div>
      </div>
  <% end %>
</div>
